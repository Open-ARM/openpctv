#!/bin/sh

. config/options
get_meta $1

#$SCRIPTS/unpack $PKG_PARENT

cd $BUILD/$1*

mkdir -p objdir-host
cd objdir-host

do_configure host \
  --disable-manpages
# --disable-static --enable-shared

make
make_install toolchain

ln -sf kmod .install/usr/bin/depmod

mkdir -p $ROOT/$PKG_BUILD_DIR
mv .install $ROOT/$PKG_BUILD_DIR

