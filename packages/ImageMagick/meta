PKG_NAME=ImageMagick
PKG_VERSION=6.9.0-4
PKG_URL="http://ftp.sunet.se/pub/multimedia/graphics/ImageMagick/ImageMagick-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="zlib libpng libjpeg-turbo tiff"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="xorg"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="image manipulation library"
PKG_LONGDESC="ImageMagick is a software suite to create, edit, and compose bitmap images. It can read, convert and write images in a variety of formats (over 100)."
