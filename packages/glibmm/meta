PKG_NAME=glibmm
PKG_VERSION=2.34.1
PKG_URL="http://rpmfind.net/linux/gnome.org/sources/glibmm/2.34/glibmm-${PKG_VERSION}.tar.xz"
PKG_REV=1
PKG_DEPENDS="GLib libsigcpp gettext zlib"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_USE="cxx"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="C++ wrapper for the GLib toolkit"
PKG_LONGDESC="GLib is a low-level general-purpose library used mainly by GTK+/GNOME applications, but is useful for other programs as well. glibmm is the C++ wrapper for GLib"
