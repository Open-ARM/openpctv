PKG_NAME=vdr-osdteletext
PKG_VERSION=0.9.5
PKG_URL="http://projects.vdr-developer.org/git/vdr-plugin-osdteletext.git/snapshot/vdr-plugin-osdteletext-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain"
PKG_RUN_DEPENDS="$TARGET_LIBC vdr"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="VDR -- osdteletext plugin"
PKG_LONGDESC="vdr-osdteletext is a plugin for VDR, the Video Disk Recorder. Displays teletext pages directly on VDR's OSD, while both sound and video are played in the background."
