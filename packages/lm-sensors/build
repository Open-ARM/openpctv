#!/bin/sh

. config/options

cd $BUILD/$1*

export CFLAGS="$TARGET_CFLAGS"
export CPPFLAGS="$TARGET_CPPFLAGS"
export PREFIX="/usr"

make PREFIX=/usr CC=$TARGET_CC AR=$TARGET_AR
sed -i 's#^PREFIX :=.*#PREFIX := /usr#' Makefile
make install CC=$CC LDCONFIG=true PREFIX="/usr" DESTDIR="./.install"
strip_bins .install
