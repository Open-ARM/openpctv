PKG_REV=1
PKG_BUILD_DEPENDS="toolchain xine-lib"
PKG_RUN_DEPENDS="$TARGET_LIBC vdr xine-lib"
PKG_PRIORITY=optional
PKG_SECTION=multimedia
PKG_SHORTDESC="VDR -- xine plugin"
PKG_LONGDESC="vdr-xine is a plugin for VDR, the Video Disk Recorder. It provides a software emulation of a VDR output device."
