PKG_NAME=fdisk
PKG_VERSION=1.2.5
PKG_URL="ftp://ftp.gnu.org/gnu/fdisk/fdisk-$PKG_VERSION.tar.bz2"
PKG_REV=1
PKG_DEPENDS="$TARGET_LIBC parted ncurses"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=filesystem
PKG_SHORTDESC="GNU fdisk"
PKG_LONGDESC="This is GNU fdisk, a GNU package attempting to replace partitioning programs not based on libparted."
