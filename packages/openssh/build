. config/options

#export LD="$TARGET_CC"
#export LDFLAGS="$TARGET_CFLAGS $TARGET_LDFLAGS"
get_meta $1


#FEATURES="zlib-dynamic threads shared no-idea no-mdc2 no-rc5 no-krb5 -DHAVE_CRYPTODEV"


cd $BUILD/$1*

./configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=/usr \
             --with-sysroot=$SYSROOT_PREFIX \
            --disable-strip \
            --disable-lastlog \
            --with-sandbox=no \
            --disable-utmp \
            --disable-utmpx \
            --disable-wtmp \
            --disable-wtmpx \
            --without-rpath \
            --with-ssl-engine \
            --disable-shared \
            --without-openssl-header-check \
            --without-pam


#do_configure --disable-strip \
#            --disable-lastlog \
#            --with-sandbox=no \
#            --disable-utmp \
#            --disable-utmpx \
#            --disable-wtmp \
#            --disable-wtmpx \
#            --without-rpath \
#            --with-ssl-engine \
#            --enable-shared \
#            --without-pam

make

make_install
