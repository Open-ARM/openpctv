PKG_NAME=scrot
PKG_VERSION=0.8
PKG_URL="http://linuxbrit.co.uk/downloads/scrot-0.8.tar.gz"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain imlib2"
PKG_RUN_DEPENDS="$TARGET_LIBC imlib2"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="A simple commandline screen capture utility"
PKG_LONGDESC="scrot (SCReen shOT) is a simple commandline screen capture utility that uses imlib2 to grab and save images. Multiple image formats are supported through imlib2's dynamic saver modules."
