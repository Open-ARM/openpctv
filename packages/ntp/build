#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_configure --disable-all-clocks \
             --enable-ipv6 \
             --without-rpath \
             --with-gnu-ld \
             --disable-linuxcaps \
             --without-ntpsnmpd \
             --enable-local-libopts \
             --without-crypto

make
make_install
