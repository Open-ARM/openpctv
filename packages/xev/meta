PKG_NAME=xev
PKG_VERSION=1.2.1
PKG_URL="$XORG_SRCS/app/${PKG_NAME}-${PKG_VERSION}.tar.bz2"
PKG_REV=1
PKG_BUILD_DEPENDS="toolchain libX11"
PKG_RUN_DEPENDS="$TARGET_LIBC libX11"
PKG_PRIORITY=optional
PKG_SECTION=x11
PKG_SHORTDESC="xev creates a window and then asks the X server to send it X11 events"
PKG_LONGDESC="xev creates a window and then asks the X server to send it X11 events whenever anything happens to the window (such as it being moved, resized, typed in, clicked in, etc.)."
