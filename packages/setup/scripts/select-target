#!/bin/sh

export TERM=linux
. gettext.sh
export TEXTDOMAIN=openpctv


dialog --no-cancel --clear --title "$(gettext "Set the default target")" --menu "$(gettext "Please select the default target to boot into.")" 10 85 3 enigma2pc "$(gettext "Enigma2 is a series of DVB television receivers for Dreambox. It has been ported to PC.")" vdr "$(gettext "A digital video recorder using standard PC components.")" xbmc "$(gettext "A free and open source media player developed by the XBMC Foundation")" 2> /tmp/target.tmp
target=$(cat /tmp/target.tmp)
rm /tmp/target.tmp
case $target in
  vdr)
    systemctl set-default vdr.target;;
  xbmc)
    systemctl set-default xbmc.target;;
  enigma2pc)
    systemctl set-default enigma2pc.target;
esac
