#!/bin/sh

export TERM=linux
. gettext.sh
export TEXTDOMAIN=openpctv


dialog --no-cancel --clear --title "$(gettext "Set the default target")" --menu "$(gettext "Please select the default target to boot into.")" 10 60 3 vdr "$(gettext "Support for AMD/NVIDIA display card")" xbmc "$(gettext "Support for Intel/AMD/NVIDIA display card")" enigma2pc "$(gettext "Only support for NVIDIA display card")" 2> /tmp/target.tmp
target=$(cat /tmp/target.tmp)
rm /tmp/target.tmp
case $target in
  vdr)
    systemctl set-default vdr.target;;
  xbmc)
    systemctl set-default xbmc.target;;
  enigma2pc)
    systemctl set-default enigma2pc.target;
esac
