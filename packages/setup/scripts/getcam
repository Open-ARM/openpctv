#!/bin/sh

export TERM=linux
. gettext.sh
export TEXTDOMAIN=openpctv

commitcam () {
CARDCLIENT=/etc/vdr/plugins/sc/cardclient.conf
OSCAMSERVER=/etc/oscam/oscam.server
CFG="`find /media -maxdepth 2 -name '[Cc][Cc][Cc][Aa][Mm].[Cc][Ff][Gg]' | head -n1`"
[ "X$CFG" = X ] && exit 0
cp "$CFG" /tmp/CCcam.cfg
i=1
if grep -q ^group $OSCAMSERVER && ! grep -q "www.url1.com,port1" $OSCAMSERVER; then
  j=$(grep ^group $OSCAMSERVER | tail -n -1 | sed 's/^group.*= //')
else
  echo "" > $OSCAMSERVER
  j=0
fi
i=$( expr $i + $j)
grep -h "^C:" /tmp/CCcam.cfg | while read line; do
  SERVER=`echo $line | awk '{print $2}'`
  PORT=`echo $line | awk '{print $3}'`
  USER=`echo $line | awk '{print $4}'`
  PASS=`echo $line | awk '{print $5}'`
  SCCAM="cccam2:${SERVER}:${PORT}:0/0000/0000:${USER}:${PASS}"
  if ! grep -q ^$SCCAM $CARDCLIENT > /dev/null 2>&1; then
    echo "$SCCAM" >> $CARDCLIENT
  fi
  if ! grep -q "${SERVER},${PORT}" $OSCAMSERVER; then
    cat >> $OSCAMSERVER << EOF
[reader]
label      = remote$i
enable     = 1
protocol   = cccam
device     = $SERVER,$PORT
user       = $USER
password   = $PASS
group      = $i
cccversion = 1.2.34

EOF
     i=$( expr $i + 1 )
  fi
done
}

selectcam () {
dialog --no-cancel --clear --title "$(gettext "Select a software emulated CAM")" --menu "$(gettext "OScam can used by Enigma2(Through dvbsoftwareca module to create symlinks for dvb adapters),VDR(Through VDR-DVBAPI plugin to act as a bridge between VDR and OScam) and XBMC(throgh VDR backend, so the same as VDR). VDR-SC only used by VDR(A software emulated CAM, VDR plugin) and XBMC.")" 13 70 2 OScam "$(gettext "Open Source Conditional Access Module software")" VDR-SC "$(gettext "A software CAM emulation, a VDR plugin")" 2> /tmp/cam.tmp
cam=$(cat /tmp/cam.tmp)
rm /tmp/cam.tmp
if grep -q "^CAM=" /etc/system.options >/dev/null 2>&1; then
   sed "s/^CAM=.*/CAM=$cam/g" /etc/system.options
else
   echo "CAM=$cam" >> /etc/system.options
fi
}

editcam () {
dialog --defaultno --clear --yesno "$(gettext "Would you like to configure OScam/VDR-SC? Of course, you can also put CCcam.cfg file into the USB disk, the system will automatically read and written into the OScam/VDR-SC configuration file.")" 10 70
if [ $? -eq 0 ]; then
. /etc/system.options
  case $CAM in
    OScam)
      nano /etc/oscam/oscam.server;;
    VDR-SC)
      nano /etc/vdr/plugins/sc/cardclient.conf;;
  esac
fi
}
if [ X$1 = "Xauto" ]; then
  commitcam
else
  selectcam
  editcam
fi
