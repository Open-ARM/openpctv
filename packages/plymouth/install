#!/bin/sh

. config/options

cd $BUILD/$1*

do_install bin
do_install etc
do_install lib
do_install sbin
do_install var
do_install usr

mkdir -p $INSTALL/lib/systemd/system/kexec.target.wants
ln -s ../plymouth-kexec.service $INSTALL/lib/systemd/system/kexec.target.wants

mkdir -p $INSTALL/lib/systemd/system/multi-user.target.wants
ln -s ../plymouth-quit.service $INSTALL/lib/systemd/system/multi-user.target.wants
ln -s ../plymouth-quit-wait.service $INSTALL/lib/systemd/system/multi-user.target.wants

mkdir -p $INSTALL/lib/systemd/system/poweroff.target.wants
ln -s ../plymouth-poweroff.service $INSTALL/lib/systemd/system/poweroff.target.wants

mkdir -p $INSTALL/lib/systemd/system/halt.target.wants
ln -s ../plymouth-halt.service $INSTALL/lib/systemd/system/halt.target.wants

mkdir -p $INSTALL/lib/systemd/system/initrd-switch-root.target.wants
ln -s ../plymouth-switch-root.service $INSTALL/lib/systemd/system/initrd-switch-root.target.wants
ln -s ../plymouth-start.service $INSTALL/lib/systemd/system/initrd-switch-root.target.wants

mkdir -p $INSTALL/lib/systemd/system/sysinit.target.wants
ln -s ../plymouth-start.service $INSTALL/lib/systemd/system/sysinit.target.wants
ln -s ../plymouth-read-write.service $INSTALL/lib/systemd/system/sysinit.target.wants

mkdir -p $INSTALL/lib/systemd/system/reboot.target.wants
ln -s ../plymouth-reboot.service $INSTALL/lib/systemd/system/reboot.target.wants
