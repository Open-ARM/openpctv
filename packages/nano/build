#!/bin/sh

. config/options

cd $BUILD/$1*
do_configure \
  --enable-largefile \
  --disable-debug \
  --disable-help \
  --disable-mouse \
  --enable-color \
  --enable-nanorc \
  --enable-altrcname=/etc/nanorc \
  --disable-glibtest \
  --with-gnu-ld \

make
make_install

if [ $TARGET_ARCH = arm ] ; then
  sed -e"s/\\\</\\\b/g" -e"s/\\\>/\\\b/g" -i .install/usr/share/nano/*.nanorc
fi
