PKG_NAME=pm-utils
PKG_VERSION=1.4.1
PKG_URL="http://pm-utils.freedesktop.org/releases/${PKG_NAME}-${PKG_VERSION}.tar.gz"
PKG_REV=1
PKG_DEPENDS="dbus"
PKG_RUN_DEPENDS="$TARGET_LIBC"
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY=optional
PKG_SECTION=libs
PKG_SHORTDESC="Suspend and hibernation utilities"
PKG_LONGDESC="Pm-utils provides simple shell command line tools to suspend and hibernate computer that can be used to run vendor, distribution, or user supplied scripts on suspend and resume."
